<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.azure.samples.communication.calling.views.activities.VCHSignupActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1026dp"
        android:src="@drawable/newvaxcenlogo" />


    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="376dp"
        android:layout_marginBottom="840dp"
        android:text="Select Your Role : "
        android:textSize="32dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="407dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="770dp"
        android:background="@android:drawable/btn_dropdown" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="931dp"
        android:gravity="center"
        android:text="Signup"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/email"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="609dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="514dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="text"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="419dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="32dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="280dp"
        android:background="#2959ad"
        android:text="Signup"
        android:textColor="@android:color/white"
        android:textSize="32dp" />

    <View
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="251dp"
        android:background="#000000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="170dp"
        android:background="#f79220"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="32dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="500dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="693dp"
        android:hint="Username"
        android:textSize="32dp" />

</RelativeLayout>